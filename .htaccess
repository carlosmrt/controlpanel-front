<IfModule mod_rewrite.c>
  Options +FollowSymLinks
  RewriteEngine On
  RewriteBase /
  # Primer paso: ignoramos archivos y directorios existentes
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule .* - [L]
  # Segundo paso: sustituimos coincidencias sin extensi√≥n .php en general
  RewriteCond %{DOCUMENT_ROOT}/$1.html -f [NC]
  RewriteRule ^(.*)$ $1.php [L]
  # Tercer paso: sustituimos coincidencias en el subdirectorio /includes
  RewriteCond %{DOCUMENT_ROOT}/dist/$1.html -f [NC]
  RewriteRule ^(.*)$ dist/$1.html [L]
</IfModule>
